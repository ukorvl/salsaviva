{
  "printWidth": 100,
  "trailingComma": "all",
  "semi": true,
  "singleQuote": true,
  "arrowParens": "avoid",
  "jsxSingleQuote": false,
  "singleAttributePerLine": true,
  "bracketSpacing": false,
  "overrides": [
    {
      "files": "**/*.css",
      "options": {
        "singleQuote": false,
        "printWidth": 80
      }
    },
    {
      "files": "**/*.json",
      "options": {
        "singleQuote": false
      }
    }
  ]
}
